<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inc.mountzoft.simplecalculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:textColor="#7bfaff"
            android:textSize="20sp"
            android:text="Give two Numbers"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
            <EditText
                android:id="@+id/userInputOne"
                android:digits="0123456789."
                android:textColor="#000000"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:inputType="phone"
                android:gravity="center"
                android:background="#00EAFF">
            </EditText>
            <EditText
                android:id="@+id/userInputTwo"
                android:digits="0123456789."
                android:textColor="#000000"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:inputType="phone"
                android:gravity="center"
                android:background="#00EAFF">
            </EditText>
        </LinearLayout>
        <Button
            android:id="@+id/addBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="275dp"
            android:layout_marginStart="50dp"
            android:text="+"
            android:onClick="addButtonFunction"
            android:background="@drawable/btnbg"/>
        <Button
            android:id="@+id/subBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="275dp"
            android:layout_marginStart="110dp"
            android:text="-"
            android:onClick="subButtonFunction"
            android:background="@drawable/btnbg"/>
        <Button
            android:id="@+id/mulBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="275dp"
            android:layout_marginStart="190dp"
            android:text="*"
            android:onClick="mulButtonFunction"
            android:background="@drawable/btnbg"/>
        <Button
            android:id="@+id/divBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="275dp"
            android:layout_marginStart="250dp"
            android:text="/"
            android:onClick="divButtonFunction"
            android:background="@drawable/btnbg"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
